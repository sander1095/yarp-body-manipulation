{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",


  "ReverseProxy": {
    "Routes": {
      "route1": {
        "ClusterId": "cluster1",
        "Match": {
          "Path": "api/{**catch-all}"
        }
      },
      "trackRoute": {
        "ClusterId": "trackCluster",
        "Match": {
          "Path": "/track"
        },
        "Transforms": [
          { "PathRemovePrefix": "/track" }
        ]
      }
    },
    "Clusters": {
      "cluster1": {
        "Destinations": {
          "destination1": {
            "Address": "https://example.com/"
          }
        }
      },
      "trackCluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7154/track-done"
          }
        }
      }
    }
  }
}
